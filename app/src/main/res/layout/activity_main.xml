<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Muhammad Ahsan"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/btn_menu_timer"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_menu_timer"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:text="Timer"
        android:textAllCaps="false"
        android:textColor="#F13939"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_menu_alarm"
        app:layout_constraintEnd_toStartOf="@+id/btn_menu_alarm"
        app:layout_constraintTop_toTopOf="@+id/btn_menu_alarm"
        app:strokeColor="#F13939"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btn_menu_alarm"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Alarm"
        android:textAllCaps="false"
        android:textColor="#F13939"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:strokeColor="#F13939"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btn_menu_camera"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:text="Camera"
        android:textAllCaps="false"
        android:textColor="#F13939"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_menu_alarm"
        app:layout_constraintStart_toEndOf="@+id/btn_menu_alarm"
        app:layout_constraintTop_toTopOf="@+id/btn_menu_alarm"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#F13939"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="96dp"
        android:text="Kashir Hasnain"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_menu_alarm" />

    <Button
        android:id="@+id/button_contact"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/white"
        android:text="Add Contact"
        android:textAllCaps="false"
        android:textColor="#F13939"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="134dp"
        android:layout_height="87dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="165dp"
        android:text="MAP"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:textColor="#F13939"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toEndOf="@+id/button_contact"
        app:layout_constraintTop_toBottomOf="@+id/btn_menu_alarm" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rizwan Amjad"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_contact" />


    <Button
        android:id="@+id/smsButton"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:text="Send SMS"
        android:textAllCaps="false"
        android:textColor="#F13939"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:strokeColor="#F13939"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/viewSmsButton"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        android:text="View SMS"
        android:textAllCaps="false"
        android:textColor="#F13939"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toEndOf="@+id/smsButton"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:strokeColor="#F13939"
        app:strokeWidth="2dp" />
</androidx.constraintlayout.widget.ConstraintLayout>